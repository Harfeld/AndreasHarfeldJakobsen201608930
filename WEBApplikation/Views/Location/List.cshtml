@using Microsoft.AspNetCore.Identity
@model IEnumerable<WEBApplikation.Models.Location>


@{
    ViewData["Title"] = "List";
}

<h1>List</h1>
    
<div>
    <form asp-controller="Location" asp-action="SearchList" onsubmit="return getSearchInput()">
        <input type="submit" value="Search"/>
        <input type="text" id="searchInput" name="searchInput"/>
    </form>
</div>
<script>
    function getSearchInput() {
        return document.getElementById("searchInput").value;
    }
</script>
<div class="list-bg">
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Road)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoadNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Road)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoadNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.LocationId">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
