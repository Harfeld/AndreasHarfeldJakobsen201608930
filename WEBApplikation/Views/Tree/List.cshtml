@model IEnumerable<WEBApplikation.Models.Tree>

@{
    ViewData["Title"] = "List";
}

<h1>Trees</h1>

<p>
    <a asp-controller="Location" asp-action="Details" asp-route-id="@Model.FirstOrDefault().LocationId">Tilbage til Lokation</a>
</p>
<div class="list-bg">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Species)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Species)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationId)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>